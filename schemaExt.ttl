@prefix :     <http://schema.org/> .
@prefix rdf:  <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd:  <http://www.w3.org/2001/XMLSchema#> .

:Compensation a rdfs:Class ;
  rdfs:label "Compensation"@en, "Kompenzace"@cs ;
  rdfs:comment "Defines how the worker is paid for the work that was done"@en ;
  rdfs:subClassOf schema:QuantitativeValue ;
  rdfs:isDefinedBy :
  .

:WorkExperience a rdfs:Class ;
  rdfs:label "Work experience"@en, "Pracovní zkušenost"@cs ;
  rdfs:subClassOf schema:StructuredValue ;
  rdfs:isDefinedBy :
  .

:currency a rdf:Property ;
  rdfs:label "currency"@en, "měna"@cs ;
  rdfs:comment "The currency (in 3-letter ISO 4217 format) of the compensation"@en ;
  rdfs:domain :Compensation ;
  rdfs:range xsd:string ;
  rdfs:isDefinedBy :
  .

:type a rdf:Property ;
  rdfs:label "type"@en, "typ"@cs ;
  rdfs:comment "Type of compensation. Recommended values are: annual, hourly, fixed."@en ;
  rdfs:domain :Compensation ;
  rdfs:range xsd:string ;
  rdfs:isDefinedBy :
  .

:contact a rdf:Property ;
  rdfs:label "contact"@en, "kontakt"@cs ;
  rdfs:comment "Information needed for a job seeker to respond to a job offer"@en ;
  rdfs:domain schema:JobPosting ;
  rdfs:range schema:ContactPoint ;
  rdfs:isDefinedBy :
  .

:compensation a rdf:Property ;
  rdfs:label "compensation"@en, "kompenzace"@cs ;
  rdfs:comment "Remuneration paid by an employer to an employee"@en ;
  rdfs:domain schema:JobPosting ;
  rdfs:range :Compensation ;
  rdfs:isDefinedBy :
  .

:isRemoteWork a rdf:Property ;
  rdfs:label "remote work"@en, "práce na dálku"@cs ;
  rdfs:domain schema:JobPosting ;
  rdfs:range xsd:boolean ;
  rdfs:isDefinedBy :
  .

:duration a rdf:Property ;
  rdfs:label "duration"@en, "délka"@cs ;
  rdfs:comment "Length of period when experience was acquired"@en,
    "Délka trvání zkušenosti"@cs ;
  rdfs:domain :Experience ;
  rdfs:range xsd:duration ;
  rdfs:isDefinedBy :
  .

:references a rdf:Property ;
  rdfs:label "references"@en, "reference"@cs ;
  rdfs:comment "Indication whether applicant is able to provide contacts for references"@en,
    "Ukazatel toho, zda může žadatel/ka uvést kontakt na člověka, který poskytne referenci k minulé práci"@cs
  rdfs:domain :Experience ;
  rdfs:range xsd:boolean ;
  rdfs:isDefinedBy :
  .

:startDate a rdf:Property ;
  rdfs:label "start date"@en, "datum nástupu"@cs ;
  rdfs:comment "Date when job opportunity starts"@en, 
    "Datum nástupu pro tuto pracovní pozici"@cs ;
  rdfs:domain schema:JobPosting ;
  rdfs:range xsd:date ;
  rdfs:isDefinedBy :
  .

schema:experienceRequirements rdfs:range :WorkExperience .

schema:industry rdfs:comment "Includes also private employment etc."@en, "Zahrnuje také kategorie zaměstnání fyzickými osobami atp."@cs .
